<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head') %>

<body>

    <%- include ('./partials/header') %>

    <main class="main-section">
        <div class="div-select-categorias">
            <select onchange="location.href=this.options[this.selectedIndex].value" name="elige" size="1">
                <option value="" disabled style="font-size:15px; color:black;">Categorías</option>

                <option value="http://localhost:3001/productos" selected>Todos los productos</option>
                <option value="http://localhost:3001/productos/categoria/almacen">Almacen</option>
                <option value="http://localhost:3001/productos/categoria/bebidas-con-alcohol">Alcohol</option>
                <option value="http://localhost:3001/productos/categoria/bebidas">Bebidas</option>
                <option value="http://localhost:3001/productos/categoria/carnes">Carnes</option>
                <option value="http://localhost:3001/productos/categoria/higiene">Higiene</option>
                <option value="http://localhost:3001/productos/categoria/lacteos">Lacteos</option>
                <option value="http://localhost:3001/productos/categoria/limpieza">Limpieza</option>
                <option value="http://localhost:3001/productos/categoria/verduleria">Verduleria</option>

            </select>
        </div>
        <section class="conjunto-articulos-productos">

            <% products.forEach(producto => { %>

            <article class="articulo-productos">
                <a href="/productos/detalle-de-producto/<%= producto.id %>">
                    <img class="imagen-producto" src="/img/<%= producto.image%>">
                    <div class="detalles-producto">
                        <div class="nombre-producto"><%= producto.name%></div>
                        <div class="descripcion-producto"><%= producto.descriptions%></div>
                        <div class="precio-producto">$ <%= producto.price%></div>

                        <button class="agregar-carrito-boton">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span>Agregar al carrito</span>
                        </button>
                    </div>
                </a>
            </article>


            <% }) %>

        </section>
        <section class="conjunto-articulos-barra-categorias">
            <nav class="barra-categorias">
                <ul class="lista-categorias">
                    <a href="/productos">
                        <div class="all"><i class="fa-solid fa-store"></i>Todos los productos</div>
                    </a>
                    <a href="/productos/categoria/almacen">
                        <div class="catego"><i class="fa-solid fa-basket-shopping"></i>Almacén</div>
                    </a>
                    <a href="/productos/categoria/bebidas">
                        <div class="catego"><i class="fa-solid fa-bottle-droplet"></i>Bebidas</div>
                    </a>
                    <a href="/productos/categoria/bebidas-con-alcohol">
                        <div class="catego"><i class="fa-solid fa-wine-glass"></i>Bebidas con alcohol</div>
                    </a>
                    <a href="/productos/categoria/carnes">
                        <div class="catego"><i class="fa-solid fa-drumstick-bite"></i></i>Carnes</div>
                    </a>
                    <a href="/productos/categoria/higiene">
                        <div class="catego"><i class="fa-solid fa-soap"></i>Higiene</div>
                    </a>
                    <a href="/productos/categoria/lacteos">
                        <div class="catego"><i class="fa-solid fa-cheese"></i></i>Lácteos</div>
                    </a>
                    <a href="/productos/categoria/limpieza">
                        <div class="catego"><i class="fa-solid fa-broom"></i>Limpieza</div>
                    </a>
                    <a href="/productos/categoria/verduleria">
                        <div class="catego-verdu"><i class="fa-solid fa-carrot"></i>Verdulería</div>
                    </a>
                </ul>
            </nav>
        </section>

    </main>

    <%- include ('partials/footer') %>
</body>

</html>