<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head') %>

<body>
    
    <%- include ('./partials/header') %> 

    <main class="main-section">
        <div>
            <a href="/productos/categorias">
                <button class="boton-categorias"> Todas las categorías
                    <div class="icono-boton-categorias">
                        <svg height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M16.172 11l-5.364-5.364 1.414-1.414L20 12l-7.778 7.778-1.414-1.414L16.172 13H4v-2z"
                                fill="currentColor"></path>
                        </svg>
                    </div>
                </button>
            </a>
        </div>
        <section class="conjunto-articulos-productos">


            <% categoria.forEach(producto => {%>

            <article class="articulo-productos">
                <a href="/productos/detalle-de-producto/<%= producto.id %>">
                    <img class="imagen-producto" src="/img/<%= producto.imagen%>">
                    <div class="detalles-producto">
                        <div class="nombre-producto"><%= producto.nombre%></div>
                        <div class="descripcion-producto"><%= producto.detalle%></div>
                        <div class="precio-producto"><%= producto.precio%></div>

                        <button class="agregar-carrito-boton">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span>Agregar al carrito</span>
                        </button>
                    </div>
                </a>
            </article>

           
            <% }) %>

        </section>
        <section class="conjunto-articulos-barra-categorias">
            <nav class="barra-categorias">
                <ul class="lista-categorias">
                    <a href="/productos">
                        <div class="all"><i class="fa-solid fa-store"></i>Todos los productos</div>
                    </a>
                    <a href="/productos/categoria/almacen">
                        <div class="catego"><i class="fa-solid fa-basket-shopping"></i>Almacén</div>
                    </a>
                    <a href="/productos/categoria/bebidas">
                        <div class="catego"><i class="fa-solid fa-bottle-droplet"></i>Bebidas</div>
                    </a>
                    <a href="/productos/categoria/bebidas-con-alcohol">
                        <div class="catego"><i class="fa-solid fa-wine-glass"></i>Bebidas con alcohol</div>
                    </a>
                    <a href="/productos/categoria/carnes">
                        <div class="catego"><i class="fa-solid fa-drumstick-bite"></i></i>Carnes</div>
                    </a>
                    <a href="/productos/categoria/higiene">
                        <div class="catego"><i class="fa-solid fa-soap"></i>Higiene</div>
                    </a>
                    <a href="/productos/categoria/lacteos">
                        <div class="catego"><i class="fa-solid fa-cheese"></i></i>Lácteos</div>
                    </a>
                    <a href="/productos/categoria/limpieza">
                        <div class="catego"><i class="fa-solid fa-broom"></i>Limpieza</div>
                    </a>
                    <a href="/productos/categoria/verduleria">
                        <div class="catego-verdu"><i class="fa-solid fa-carrot"></i>Verdulería</div>
                    </a>
                </ul>
            </nav>
        </section>
    </main>
    <%- include ('partials/footer') %>

</body>

</html>