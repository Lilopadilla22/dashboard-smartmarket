<header>
    <div class="elementos-header">
        <nav class="nav-menu">
            <div class="img-burguer">
                <button class="boton-menu" onclick="actionMenu()"><i class="fa-solid fa-bars"></i></button>
                <a href="/" class="logo-principal"><img src="/images/SMART MARKET_logo sin fondo.png"
                        class="logo-principal"></a>
            </div>
            <div class="group">
                <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
                    <g>
                        <path
                            d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
                        </path>
                    </g>
                </svg>
                <input placeholder="¿Qué producto buscas?" type="search" class="input">
            </div>
            <div class="opciones-header">
                <% if (locals.isLogged) { %>
                    <div class="opciones-nav-header"><a href="/usuarios/mi-perfil/<%= user.id %> "><img
                        src="/images/users/<%= user.fotoPerfil %>"
                        style="width: 2em; border-radius: 50%;"></a>
                </div>
                <select name="" id="" class="select-header" 
                    onchange="window.location.href=this.options[this.options.selectedIndex].value">
                    <option value="" disabled class="opciones-select-header">----------------------------------</option>
                    <option value="" class="opciones-select-header-nombre" disabled selected>
                      <%= user.nombreYApellido %>
                    </option>
                    <option value="" disabled class="opciones-select-header">----------------------------------</option>
                        <option value="/usuarios/mi-perfil/<%= user.id %>" class="opciones-select-header">
                            MI PERFIL
                        </option>
                        <option value="" disabled class="opciones-select-header">----------------------------------</option>
                    <option value="/productos/carrito" class="opciones-select-header">
                        CARRITO 
                    </option>
                    <option value="" disabled class="opciones-select-header">----------------------------------</option>
                    <option value="/productos/crear-producto" class="opciones-select-header">
                        CREAR PRODUCTO (+)
                    </option>
                    <option value="" disabled class="opciones-select-header">----------------------------------</option>
                    <option value="/usuarios/logout" class="opciones-select-header">Cerrar sesión</option>
                    <option value="" disabled class="opciones-select-header">----------------------------------</option>
                </select>
                <% } else { %>


                <div class="inicios-usuarios"><a href="/usuarios/registro">Registrarse</a></div>
                <div class="inicios-usuarios"><a href="/usuarios/login">Iniciar sesión</a></div>
                <% } %>

            </div>
        </nav>

    </div>
</header>