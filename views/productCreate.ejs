<!DOCTYPE html>
<html lang="es">

<%- include ('./partials/head') %>

<body>

    <%- include ('./partials/header') %>

    <main class="main-edit">

        <form class="form-edit" action="/productos/crear-producto" method="POST"
            enctype="multipart/form-data">
            <h2 class="products-title">Crear un producto nuevo</h2>
            <div class="div-form-edit">
                <label for="name" class="form-label">Nombre del producto:</label>
                <input type="text" id="nombre" name="name" placeholder="Ej. Cafe Dolca Suave" class="form-input">


                <label for="price" class="form-label">Precio del producto:</label>
                <input type="text" id="precio" name="price" placeholder="Ej. $1000" class="form-input">

                <!-- <label for="discount" class="form-label">Descuento:</label>
                <input type="text" id="discount" name="discount" value="0 %" class="form-input"> -->


                <label for="category" class="form-label">Categoría:</label>
                <select name="categories_id" id="categoria" class="form-input" value="categoria">
                    <option value="">Elige una categoria</option>
                    <option value="1">Almacen</option>
                    <option value="2">Bebidas</option>
                    <option value="3">Bebidas con alcohol</option>
                    <option value="4">Carnes</option>
                    <option value="5">Higiene</option>
                    <option value="6">Lacteos</option>
                    <option value="7">Limpieza</option>
                    <option value="8">Verduleria</option>
                </select>


                
                <input type="file" name="image" class="form-input-image" value="imagen" id="file">

                <label for="description" class="form-label">Descripción:</label>
                <textarea name="descriptions" id="detalle" class="form-input" value="detalle" placeholder="Agrega una descripcion para tu nuevo producto"></textarea>

            </div>

            <div class="button-edit-create">
                <button type="submit" class="buy-now-button">Guardar producto</button>
            </div>

        </form>


    </main>

    <%- include('./partials/footer') %>
</body>

</html>