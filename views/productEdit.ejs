<!DOCTYPE html>
<html lang="es">

    <%- include ('./partials/head') %>

<body>

    <%- include ('./partials/header') %>

    <main class="main-edit">

            <form class= "form-edit" action="/products/create" method="POST" enctype="multipart/form-data">
                <h2 class="products-title">Estás editando: <%= product.nombre %> </h2>
                    <div class="div-form-edit">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name" placeholder="<%= product.nombre %>" class="form-input">


                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="text" id="price" name="price" placeholder="<%= product.precio %>" class="form-input">

                    <label for="discount" class="form-label">Descuento:</label>
                    <input type="text" id="discount" name="discount" placeholder="0 %" class="form-input">


                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value=""><%= product.categoria %></option>
                        <option value="in-sale">almacen</option>
                        <option value="visited">bebidas</option>
                        <option value="visited">bebidas con alcohol</option>
                        <option value="visited">carnes</option>
                        <option value="visited">higiene</option>
                        <option value="visited">lacteos</option>
                        <option value="visited">limpieza</option>
                        <option value="visited">verduleria</option>
                    </select>


                    <!-- <label for="image" class="form-label">Imágen</label> -->
                    <img name="image" class="form-img" src="/img/<%= product.imagen %>">
                    <input type="file" name="image" class="form-input-image">

                    <label for="description" class="form-label">Descipción:</label>
                    <textarea name="description" id="description" class="form-input"></textarea>
                    
                </div>

                
                
            </form>
            
            <button type="submit" class="buy-now-button">Guardar producto</button>

    </main>

    <%- include('./partials/footer') %>
</body>

</html>