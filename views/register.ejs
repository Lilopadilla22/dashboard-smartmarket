<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head') %>

<body class="body-register">

    <%- include ('./partials/header') %>


    <main class="main-register">


        <form class="card-register" action="/usuarios/registro" method="POST" enctype="multipart/form-data">

            <div class="card_header">

                <h1 class="form_heading">Registro</h1>
            </div>
            <div class="field">
                <label for="nombreYApellido">Nombre y apellido</label>
                <input class="input-login" name="nombreYApellido" type="text" id="username"
                    value="<%= locals.oldData ? oldData.nombreYApellido : null %>">

                <% if (locals.errors && errors.nombreYApellido) { %>
                <div class="text-danger">
                    <%= errors.nombreYApellido.msg %>
                </div>

                <% } %>
            </div>


            <div class="field">
                <label for="usuario">Nombre de usuario</label>
                <input class="input-login" name="usuario" type="text" id="usuario"
                    value="<%= locals.oldData ? oldData.usuario : null %>">
                <% if (locals.errors && errors.usuario) { %>
                <div class="text-danger">
                    <%= errors.usuario.msg %>
                </div>

                <% } %>
            </div>
            <div class="field">
                <label for="password">Contraseña</label>
                <input class="input-login" name="password" type="password" id="password" minlength="5" maxlength="10">
                <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                    <%= errors.password.msg %>
                </div>

                <% } %>
            </div>

            <div class="field">
                <label for="repeatPassword">Confirmar Contraseña</label>
                <input class="input-login" name="repeatPassword" type="password" id="repeatPassword" minlength="5"
                    maxlength="10">
                <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                    <%= errors.password.msg %>
                </div>
                <% } %>
            </div>
            <div class="field">
                <label for="pais">País</label>
                <input class="input-login" name="pais" type="pais" id="pais"
                    value="<%= locals.oldData ? oldData.pais : null %>">
                <% if (locals.errors && errors.pais) { %>
                <div class="text-danger">
                    <%= errors.pais.msg %>
                </div>

                <% } %>
            </div>

            <div class="field">
                <label for="direccion">Dirección</label>
                <input class="input-login" name="direccion" type="direccion" id="direccion"
                    value="<%= locals.oldData ? oldData.direccion : null %>">
                <% if (locals.errors && errors.direccion) { %>
                <div class="text-danger">
                    <%= errors.direccion.msg %>
                </div>

                <% } %>
            </div>
            <div class="field">
                <label for="fotoPerfil">Foto de perfil</label>
                <input type="file" name="fotoPerfil" value="fotoPerfil" id="perfilFile">
                <% if (locals.errors && errors.fotoPerfil) { %>
                <div class="text-danger">
                    <%= errors.fotoPerfil.msg %>
                </div>

                <% } %>
            </div>
            <div class="checkbox-register">
                <label class="label-checkbox" for="terminos">
                    <input type="checkbox" class="checkbox-register" name="terminos" value="terminos">Acepto términos y
                    condiciones
                    <% if (locals.errors && errors.terminos) { %>
                    <div class="text-danger">
                        <%= errors.terminos.msg %>
                    </div>

                    <% } %>
                    <input type="checkbox" class="checkbox-register" name="ofertas" value="ofertas">Quiero recibir
                    ofertas
                </label>
            </div>

            <div>
                <button class="button-login" type="submit">Enviar</button>
            </div>
        </form>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>